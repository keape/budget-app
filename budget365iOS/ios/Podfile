# Resolve react_native_pods.rb with node to allow for hoisting
require Pod::Executable.execute_command('node', ['-p',
  'require.resolve(
    "react-native/scripts/react_native_pods.rb",
    {paths: [process.argv[1]]},
  )', __dir__]).strip

platform :ios, '15.1'
prepare_react_native_project!

linkage = ENV['USE_FRAMEWORKS']
if linkage != nil
  Pod::UI.puts "Configuring Pod with #{linkage}ally linked Frameworks".green
  use_frameworks! :linkage => linkage.to_sym
end

config = use_native_modules!

target 'Budget365' do
  use_react_native!(
    :path => config[:reactNativePath],
    :app_path => "#{Pod::Config.instance.installation_root}/.."
  )
end

post_install do |installer|
  react_native_post_install(
    installer,
    config[:reactNativePath],
    :mac_catalyst_enabled => false
  )

  installer.pods_project.targets.each do |target|
    target.build_configurations.each do |config|
      # Fix for "No matching function for call to object of type 'const conditional_t<false, ...>'"
      # This is a common issue with Folly and React Native 0.80+ on some Xcode versions.
      config.build_settings['GCC_PREPROCESSOR_DEFINITIONS'] ||= ['$(inherited)', 'FOLLY_HAS_COROUTINES=0']
      
      # Ensure consistent C++ version
      config.build_settings['CLANG_CXX_LANGUAGE_STANDARD'] = 'c++20'
    end

    # Fix for "Multiple commands produce ... React-Core_privacy.bundle"
    if target.name == 'React-Core.common-React-Core_privacy'
      target.build_configurations.each do |config|
        config.build_settings['PRODUCT_NAME'] = 'React-Core-Common-Privacy'
      end
    end
  end

  # Fix pods where source directories are named with a trailing " 2" suffix.
  # CocoaPods sometimes downloads into a renamed folder, breaking header imports.
  # Strategy: create a symlink without the suffix pointing to the real directory.
  require 'fileutils'

  pods_root = installer.sandbox.root.to_s

  # Map of pod_folder => [subfolder_that_needs_symlink, ...]
  symlink_fixes = {
    'DoubleConversion' => ['double-conversion'],
    'AppCheckCore'     => ['AppCheckCore'],
  }

  symlink_fixes.each do |pod, subfolders|
    subfolders.each do |subfolder|
      pod_path    = File.join(pods_root, pod)
      link_path   = File.join(pod_path, subfolder)
      target_path = File.join(pod_path, "#{subfolder} 2")
      if Dir.exist?(target_path) && !File.exist?(link_path)
        FileUtils.ln_sf(target_path, link_path)
        Pod::UI.puts "Fixed symlink: #{pod}/#{subfolder} -> #{subfolder} 2"
      end
    end
  end

  # Fix AppCheckCore public headers so <AppCheckCore/...> imports work.
  # CocoaPods skips header symlinking when the source dir is named "AppCheckCore 2".
  app_check_public = File.join(pods_root, 'AppCheckCore', 'AppCheckCore 2', 'Sources', 'Public', 'AppCheckCore')
  if Dir.exist?(app_check_public)
    public_headers_dest = File.join(pods_root, 'Headers', 'Public', 'AppCheckCore')
    FileUtils.mkdir_p(public_headers_dest)
    Dir.glob(File.join(app_check_public, '*.h')).each do |h|
      dest = File.join(public_headers_dest, File.basename(h))
      FileUtils.ln_sf(h, dest) unless File.exist?(dest)
    end
    Pod::UI.puts "Fixed AppCheckCore public headers (#{Dir.glob(File.join(public_headers_dest, '*.h')).count} headers)"

    # Also inject AppCheckCore into HEADER_SEARCH_PATHS for every target xcconfig
    installer.pods_project.targets.each do |tgt|
      tgt.build_configurations.each do |bc|
        existing = bc.build_settings['HEADER_SEARCH_PATHS'] || '$(inherited)'
        app_check_path = '"$(PODS_ROOT)/Headers/Public/AppCheckCore"'
        unless existing.include?('AppCheckCore')
          bc.build_settings['HEADER_SEARCH_PATHS'] = "#{existing} #{app_check_path}"
        end
      end
    end
  end

  # Deduplicate in the shell script to ensure only one (the original) is used
  installer.aggregate_targets.each do |target|
    resources_script = target.copy_resources_script_path
    if File.exist?(resources_script)
      script_content = File.read(resources_script)
      lines = script_content.split("\n")
      seen_bundle = false
      new_lines = lines.reject do |line|
        if line.include?('React-Core_privacy.bundle')
          if seen_bundle
            true
          else
            seen_bundle = true
            false
          end
        else
          false
        end
      end
      File.write(resources_script, new_lines.join("\n") + "\n")
    end
  end
end









